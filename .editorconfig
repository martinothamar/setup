# EditorConfig: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

[*.sh]
indent_style = space
indent_size = 2

# 2 space indentation for YAML
[*.yml]
indent_style = space
indent_size = 2

[Justfile]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
